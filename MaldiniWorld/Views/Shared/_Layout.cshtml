<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Maldini Granite&Marbles</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               <p class="first" >Maldini Granite&Marbles</p>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Products", "Index", "Products")</li>
                    <li>@Html.ActionLink("News Feed", "Index", "News")</li>
                    <li>@Html.ActionLink("Services", "Index", "Services")</li>
                    <li>@Html.ActionLink("About us", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact us", "Create", "Contacts")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

        <hr />
        <style>
            footer {
                background-color: white;
                border-color:brown;
                color:brown;
                border: solid;
                border-radius: 15px;
                padding: 24px;
            }
            h2,h1{
                color:brown;
                text-align:center;
            }
            body {
                font-family: Bahnschrift;
            }
            .first{color:crimson;
                   font-size:large;
                   margin:3px;
                   
            }
        </style>
        <footer>
            <p align="center">&copy; 1997 - @DateTime.Now.Year Maldini Granite&Marbles | &copy; Solomon Yusuf .</p>
        </footer>
    </div>
    <script src="~/Scripts/anim.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/anim")
    @RenderSection("scripts", required: false)
</body>
</html>
